<LoginScreen>:
    canvas: 
        Color : 
            rgb : utils.get_color_from_hex("#ffffff")
        Rectangle : 
            size : self.size
            pos : self.pos
    FloatLayout : 
        TextInput : 
            id : login_email
            hint_text : "email"
            size_hint : .8, .1
            pos_hint : {"top" : .9, "right" : .9}
        TextInput : 
            id : login_password
            password : True
            hint_text : "password"
            size_hint : .8, .1
            pos_hint : {"top" : .7, "right" : .9}
        Label : 
            id : error_message
            color : (1,0,0,1)
            size_hint : .8, .1
            pos_hint : {"top" : .5, "right" : .9}
        LabelButton:
            canvas.before:
                Color : 
                    rgb : utils.get_color_from_hex("#784512")
                Rectangle : 
                    size : self.size
                    pos : self.pos
            text : "[u]Sign up![/u]"
            markup : True
            size_hint : .8, .1
            pos_hint : {"top" : .2, "right" : .9}
            on_release : 
                app.my_firebase.sign_up(login_email.text, login_password.text)
            


